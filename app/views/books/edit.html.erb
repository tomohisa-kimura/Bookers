<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <div class="field">
    Title<br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    Body<br>
    <%= f.text_area :body %>
  </div>
  <div class="action"><%= f.submit 'Update Book' %></div>
  <%= link_to 'Show', book_path(@book) %>
  |
  <%= link_to 'Back', books_path %>
<% end %>